# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/daps?schema=public"

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV="development"
PORT=3000
BASE_URL="http://localhost:3000"

# ============================================
# SESSION & SECURITY
# ============================================
SESSION_SECRET="change-me-to-a-long-random-string"
COOKIE_SECRET="another-long-random-string"
# Session expiry in milliseconds (7 days = 604800000)
SESSION_MAX_AGE=604800000

# ============================================
# GOOGLE OAUTH (for passport-google-oauth20)
# ============================================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"

# ============================================
# EMAIL CONFIGURATION (Nodemailer)
# ============================================
# For development: leave blank to use Ethereal (fake SMTP)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@daps.com"

# For production Gmail example:
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-specific-password"

# ============================================
# ADMIN ACCOUNT (Development Only)
# ============================================
ADMIN_EMAIL="admin@daps.com"
ADMIN_PASSWORD="admin123"

# ============================================
# DEVELOPMENT FLAGS
# ============================================
# Auto-login for development
DEV_AUTO_LOGIN=true
# Enable detailed error messages
DEBUG=false

# ============================================
# SECURITY & RATE LIMITING
# ============================================
# Max login attempts before lockout
MAX_LOGIN_ATTEMPTS=5
# Lockout duration in minutes
LOCKOUT_DURATION=15

# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FILE UPLOADS (if applicable)
# ============================================
MAX_FILE_SIZE_MB=5
UPLOAD_DIR="./uploads"

# ============================================
# CORS (if frontend is separate)
# ============================================
# FRONTEND_URL="http://localhost:5173"
# ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# ============================================
# LOGGING
# ============================================
LOG_LEVEL="info"
# LOG_FILE="./logs/app.log"

# ============================================
# OPTIONAL: THIRD-PARTY SERVICES
# ============================================
# If you add Stripe, AWS, etc. later
# STRIPE_SECRET_KEY=""
# STRIPE_PUBLISHABLE_KEY=""
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="us-east-1"